{
    "compilerOptions": {
        "alwaysStrict": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "CommonJS",
        "target": "ESNext",
        "declaration": true,
        "skipLibCheck": true,
        "plugins": [
            { "transform": "typescript-is/lib/transform-inline/transformer" }
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/**/*.mock.ts",
        "node_modules"
    ]
}